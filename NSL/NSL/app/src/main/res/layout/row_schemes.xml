<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13sdp"
        android:background="@color/textgraycolor">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chk_product"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:orientation="vertical">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chk_product"
                android:layout_gravity="center"
                android:text="@string/scheme"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp" />

            <Spinner
                android:id="@+id/spin_scheme"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/row_spin_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="vertical">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/price_pkt"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp" />

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_schemeprice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="4"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint=""
                android:inputType="numberDecimal"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="vertical">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="   Qty"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp" />

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_qty"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/et_schemeprice"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:layout_alignTop="@+id/spin_scheme"
                android:layout_marginTop="@dimen/_10sdp"
                android:ems="4"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="8"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:orientation="vertical">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/amt"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp" />

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_amount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="4"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="number"
                android:text=""
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_toLeftOf="@+id/image_download"
    android:layout_toStartOf="@+id/image_download">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_13sdp"
        app:srcCompat="@drawable/grey"


        />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="@string/nuziveeduseeds_limited"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
      />
</LinearLayout>
    <ImageView
        android:id="@+id/image_download"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_13sdp"
        app:srcCompat="@drawable/download"
        android:layout_marginRight="@dimen/_10sdp"
       />
</RelativeLayout>