<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_1sdp"
        android:weightSum="3">

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_sr"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:gravity="start"
            android:text="sr"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_div"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/division"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_osa"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/outsta"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ageimg"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_17sdp"
                android:gravity="center" />

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:id="@+id/tv_aging"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:gravity="center"
                android:text="@string/aging"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@color/rowbottomcolor">

    </View>
</LinearLayout>