<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="Nuziveeduseeds limited "
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/rightarrow"
        android:tint="@color/rowbottomcolor"
        android:visibility="gone" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_company_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_company"
        android:layout_alignStart="@+id/tv_company"
        android:layout_below="@+id/tv_company"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="New Text"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_13sdp"
        android:layout_alignLeft="@+id/tv_company_code"
        android:layout_alignStart="@+id/tv_company_code"
        android:layout_below="@+id/tv_company_code"
        android:text="sfmnsfmf"
        android:visibility="invisible" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_rbs_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_company"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="3,50,000.00"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_company_coded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_rbs_amount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_company"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="New Text"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/textgraycolor"></View>

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_5sdp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
