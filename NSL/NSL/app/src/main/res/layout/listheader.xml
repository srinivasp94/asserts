<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/listview_header_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2.2"
            android:gravity="center_vertical"
            >
        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_orderdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="@string/s_details_date"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="1.23"/>

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:id="@+id/customTextViewNormal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="Qty."
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:gravity="center"
                android:text="P/U"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:layout_weight="0.20"/>

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="right"
            android:text="@string/amount"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="0.52"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/itemcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="1."
            android:textColor="@color/black" />

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itemcount"
            android:layout_alignBottom="@+id/itemcount"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_toEndOf="@+id/itemcount"
            android:layout_toRightOf="@+id/itemcount"
            android:text="@string/indraja_bt2_p450g"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="1.2"/>

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_qunatity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="2500"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:layout_weight="0.25"
            android:gravity="center"/>
        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="2500"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:layout_weight="0.2"
            android:gravity="center"/>
        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="2500"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:layout_weight="0.35"
            android:gravity="right"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp">
        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_scheme"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_alignLeft="@+id/tv_product"
            android:layout_alignStart="@+id/tv_product"
            android:layout_below="@+id/tv_product"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/schemebutton"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="S"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/tv_schemedetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_scheme"
            android:layout_alignBottom="@+id/tv_scheme"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/tv_scheme"
            android:layout_toRightOf="@+id/tv_scheme"
            android:text="@string/_p_b"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
            </LinearLayout>
</LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="9.9dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@color/rowbottomcolor"></View>
</RelativeLayout>
