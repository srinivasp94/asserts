<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nuziveeduseeds_limited"
        android:textSize="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rowbottomcolor"></View>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/rightarrow"
        android:layout_marginLeft="@dimen/_8sdp"
        android:visibility="gone"
        android:tint="@color/rowbottomcolor"
        android:layout_centerVertical="true"/>

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_company_code"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/tv_company"
        android:layout_alignLeft="@+id/tv_company"
        android:layout_alignStart="@+id/tv_company" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:visibility="invisible"
        android:id="@+id/textView2"
        android:layout_below="@+id/tv_company_code"
        android:layout_alignLeft="@+id/tv_company_code"
        android:layout_alignStart="@+id/tv_company_code" />


</RelativeLayout>
