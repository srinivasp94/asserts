<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_15sdp">



    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Name of dealer"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/text_color"
        android:id="@+id/tv_dealer_name_cotton"
        android:layout_marginLeft="@dimen/_5sdp"/>

        <com.nsl.app.commonutils.CustomTextViewLight
            android:id="@+id/tv_dealer_tin_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/name_smalls"
            android:textColor="@color/textgraycolor"
            android:textSize="@dimen/_14sdp"
            android:typeface="normal" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="3"
       android:background="@color/white">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_marginRight="@dimen/_5sdp"
           android:layout_marginLeft="@dimen/_5sdp"
           >

           <com.nsl.app.commonutils.CustomTextViewNormal
               android:text="@string/stock_placed"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_11sdp"
               android:layout_weight="1"
               android:textColor="@color/textgraycolor"
               />
           <com.nsl.app.commonutils.CustomTextViewNormal
               android:id="@+id/TextView_stockplaced"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_25sdp"
               android:inputType="number"
               android:hint="0"
               android:gravity="center"
               android:layout_weight="1"
               android:textColor="@color/black"
               android:background="@drawable/bgr" />

</LinearLayout>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center"
           >
           <com.nsl.app.commonutils.CustomTextViewNormal
               android:text="@string/currenr_stock"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_11sdp"
               android:layout_weight="1"
               android:textColor="@color/textgraycolor"
               />



           <com.nsl.app.commonutils.CustomTextViewNormal
               android:layout_width="match_parent"
               android:layout_height="@dimen/_25sdp"
               android:inputType="number"
               android:id="@+id/TextView_current_stock"
               android:hint="0"
               android:background="@drawable/bgr"
               android:gravity="center"
               android:layout_weight="1"
               android:textColor="@color/black"
               />


       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_marginRight="@dimen/_5sdp"
           android:layout_marginLeft="@dimen/_5sdp"
           >

           <com.nsl.app.commonutils.CustomTextViewNormal
               android:text="@string/pog_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_11sdp"
               android:layout_weight="1"
               android:textColor="@color/textgraycolor"/>

           <com.nsl.app.commonutils.CustomTextViewNormal
               android:layout_width="match_parent"
               android:layout_height="@dimen/_25sdp"
               android:inputType="number"
               android:id="@+id/TextView_pog"
               android:hint="0"
               android:background="@drawable/bgr"
               android:gravity="center"
               android:textColor="@color/black"
               android:layout_weight="1"/>
           </LinearLayout>

       <Button
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_30sdp"
           android:text="R"
           android:gravity="center"
           android:layout_gravity="center"
           android:textSize="@dimen/_20sdp"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:id="@+id/button_r"
           android:layout_marginLeft="@dimen/_5sdp"
           android:layout_marginRight="@dimen/_5sdp"
           android:background="@drawable/button_background"
           android:visibility="gone"/>
           <ImageView
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"
               android:layout_below="@+id/tv_dealer_name_cotton"
               android:layout_toRightOf="@id/button_r"
               android:layout_marginLeft="@dimen/_6sdp"
               android:id="@+id/iv_search"
               android:src="@drawable/search_btn"
               android:visibility="gone"

               />


</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/rowbottomcolor"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        />
</LinearLayout>