<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">


    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text="@string/pog_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/defaultcolor"
        android:textSize="@dimen/_15sdp"
        android:textAllCaps="true"
        android:layout_height="wrap_content" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text="Tin# TN204R"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/textgraycolor"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text="RETAILER 1"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text="@string/product"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/textgraycolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:text="KAREENA-P10G"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/textview_retailer"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textgraycolor"
                android:text="Date" />

            <com.nsl.app.CustomEditTextNormal
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bgr" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pog_name"
                android:textColor="@color/textgraycolor"
                android:gravity="center"/>
            <com.nsl.app.CustomEditTextNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/bgr"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/checkmark"
                android:layout_marginTop="@dimen/_5sdp"
                 />
        </LinearLayout>

    </LinearLayout>
    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product on Ground till date"
        android:textColor="@color/defaultcolor"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"/>
    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="800"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PACKETS"
        android:textColor="@color/textgraycolor"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_20sdp"
        />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close_button"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/close_button_background" />
</RelativeLayout>