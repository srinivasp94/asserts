<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/chk_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="@string/nuziveeduseeds_limited"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/rowbottomcolor"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_below="@+id/ll_horizontal">

    </View>


    <LinearLayout
        android:id="@+id/ll_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chk_product"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chk_product"
                android:text="@string/scheme"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp" />

            <Spinner
                android:id="@+id/spin_scheme"
                android:layout_width="@dimen/_98sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_3sdp"

                android:background="@drawable/row_spin_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.nsl.app.commonutils.CustomTextViewLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/price_pkt"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp"
                />

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_schemeprice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="5"
                android:background="@drawable/bgr"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint=""
                android:inputType="numberDecimal"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.nsl.app.commonutils.CustomTextViewLight
                android:id="@+id/txt_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"/>

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_qty"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:background="@drawable/bgr"
                android:ems="5"
                android:gravity="center"
                android:hint=""
                android:inputType="number"
                android:maxLength="8"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.nsl.app.commonutils.CustomTextViewLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/amount"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"/>

            <com.nsl.app.CustomEditTextNormal
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="4"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:background="@drawable/bgr"
                android:inputType="number"
                android:text=""
                android:textSize="@dimen/_11sdp"
                />
        </LinearLayout>


        <com.nsl.app.commonutils.CustomTextViewNormal
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
