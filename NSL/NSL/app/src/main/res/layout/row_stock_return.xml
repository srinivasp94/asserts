<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <com.nsl.app.commonutils.CustomTextViewNormal
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Name of dealer"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/text_color"
        android:id="@+id/tv_dealer_name_cotton"
        android:layout_marginRight="@dimen/_15sdp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <com.nsl.app.commonutils.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_quantity"
                android:textColor="@color/textgraycolor"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:id="@+id/tv_stock_return"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:background="@drawable/bgr"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/black" />

        </LinearLayout>

        <ImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sdp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/btn_save_stock"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/checkmark"/>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/rowbottomcolor"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        />
</LinearLayout>