<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_4sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:id="@+id/ll_clinics"
            android:weightSum="1">
            <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewBold
                android:layout_weight="0.9"
                android:id="@+id/doctor_row_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Name"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_navifation"
                android:layout_weight="0.1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/navigation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctor_row_desc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_clinics"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_row_name"
                android:gravity="center|left"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/overview" />
                </LinearLayout>

                <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                    android:id="@+id/doctor_row_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_row_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/l1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="abf"
                    android:textColor="#262626" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_row_name"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone"

                >

                <LinearLayout

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/call" />
                </LinearLayout>

                <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_row_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/l1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="040-562535225"
                    android:textColor="#262626" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctor_row_name"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone"


                >

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/email" />
                </LinearLayout>

                <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_row_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/l1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="abcdj@gmail.com"
                    android:textColor="#262626" />
            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout
            android:id="@+id/l2"
            android:gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/doctor_row_desc"
            android:background="@drawable/icon_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/call"
                android:id="@+id/imageView2"/>
        </LinearLayout>

        <TextView
            android:id="@+id/doctor_row_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/l2"
            android:layout_below="@+id/doctor_row_desc"
