<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:background="@color/bgr_color"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/white"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/dsl_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:scaleType="fitXY"
            android:src="@drawable/doctor_black" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-20dp"
            android:rotation="90"
            android:scaleType="fitXY"
            android:src="@drawable/dotted_line_red" />

        <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
            android:id="@+id/tv_docspectitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="11.5sp" />

        <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewLight
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="0.3"
            android:background="@drawable/addcartbgr"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Rs.1200"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_weight="0.1"
            android:background="@drawable/red_shadow"
            android:gravity="center"
            android:padding="@dimen/_2sdp">

            <ImageView
android:id="@+id/img_delete"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"

                android:src="@drawable/icons_trash"
                android:tint="@color/white" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>