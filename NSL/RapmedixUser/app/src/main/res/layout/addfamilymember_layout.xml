<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/memberlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prfl_head"
                android:layout_marginTop="@dimen/_18sdp"
                android:weightSum="2.6">

                <Button

                    android:id="@+id/below"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@android:color/transparent"
                    android:text="Below 18 Years"
                    android:textColor="@color/tab_selected" />

                <Button
                    android:id="@+id/above"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="@android:color/transparent"
                    android:text="Above 18 Years"
                    android:textColor="@color/tab_selected" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="0.01">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mobile" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/edit" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.99"
                        android:gravity="start"
                        android:orientation="vertical">

                        <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/patient_name"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="Name"
                            android:textColor="@color/tab_indicator" />

                        <EditText
                            android:singleLine="true"
                            android:id="@+id/member_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="34dp"
                            android:padding="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/mobile"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/tab_indicator"
                        android:gravity="center"
                        android:text="Mobile"
                        android:textColor="@color/tab_indicator" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/member_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/tab_indicator"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="@color/tab_indicator" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/member_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/patient_name"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="Birthday"
                        android:textColor="@color/tab_indicator" />

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:id="@+id/member_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#cccccc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/patient_name"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="Relationship"
                        android:textColor="@color/tab_indicator" />

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:id="@+id/member_relation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#cccccc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/map_pin"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/tab_indicator"
                        android:gravity="center"
                        android:text="Address"
                        android:textColor="@color/tab_indicator" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/member_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/patient_name"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="City"
                        android:textColor="@color/tab_indicator" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/member_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="0.99"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/patient_name"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="State"
                        android:textColor="@color/tab_indicator" />

                    <EditText
                        android:singleLine="true"
                        android:id="@+id/member_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="34dp"
                        android:padding="10dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/member_add"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:background="@drawable/call_shape"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="ADD MEMBER"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>