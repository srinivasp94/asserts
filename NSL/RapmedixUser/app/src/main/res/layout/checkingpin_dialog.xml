<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:text="checking Pin"
        android:id="@+id/tv_title_dialog"
        android:textColor="@color/green_dark"
        android:textSize="@dimen/_20sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_facebook_likeboxcountview_text_color" />

    <EditText
        android:id="@+id/edt_pin"
        android:singleLine="true"
        android:maxLength="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/edittext_border"
        android:padding="@dimen/_5sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/place_autocomplete_search_hint" />

    <Button
        android:id="@+id/btn_dialog_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/ripplebutton"
        android:padding="@dimen/_3sdp"
        android:text="submit"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_15sdp"/>

</LinearLayout>