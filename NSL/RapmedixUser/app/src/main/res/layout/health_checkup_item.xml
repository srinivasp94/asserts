<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_hc"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/shadow"
    android:orientation="horizontal"
    android:padding="10dp"
    app:layout_goneMarginBottom="@dimen/_1sdp">

    <ImageView
        android:id="@+id/imagee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/shape"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/heart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewBold
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Health Checkup title"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"

            />

        <com.example.pegasys.rapmedixuser.activity.customviews.CustomTextViewNormal
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. "
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>