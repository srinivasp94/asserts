<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pagasys.welcome.pegasysattendence">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.pagasys.welcome.pegasysattendence.MainActivity" />
        <activity android:name="com.pagasys.welcome.pegasysattendence.WebviewActivity" />
        <activity android:name="com.pagasys.welcome.pegasysattendence.OnetimeLoginActivity">


        </activity>

        <activity android:name="com.pagasys.welcome.pegasysattendence.LoginActivity">

        </activity>
        <activity
            android:name="com.pagasys.welcome.pegasysattendence.FlashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/Role">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>